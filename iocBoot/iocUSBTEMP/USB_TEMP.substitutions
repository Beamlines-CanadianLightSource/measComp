{Bi2,  0x02,   USB_TEMP_1,     0}
{Bi3,  0x04,   USB_TEMP_1,     0}
{Bi4,  0x08,   USB_TEMP_1,     0}
{Bi5,  0x10,   USB_TEMP_1,     0}
{Bi6,  0x20,   USB_TEMP_1,     0}
{Bi7,  0x40,   USB_TEMP_1,     0}
{Bi8,  0x80,   USB_TEMP_1,     0}
}

