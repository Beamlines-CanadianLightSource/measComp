{
pattern
{ R,      PORT,    ADDR,     SCAN,    PREC}
{Ti1,  USB_TEMP_1,    0,  "1 second",    2}
{Ti2,  USB_TEMP_1,    1,  "1 second",    2}
{Ti3,  USB_TEMP_1,    2,  "1 second",    2}
{Ti4,  USB_TEMP_1,    3,  "1 second",    2}
{Ti5,  USB_TEMP_1,    4,  "1 second",    2}
{Ti6,  USB_TEMP_1,    5,  "1 second",    2}
{Ti7,  USB_TEMP_1,    6,  "1 second",    2}
{Ti8,  USB_TEMP_1,    7,  "1 second",    2}
}

